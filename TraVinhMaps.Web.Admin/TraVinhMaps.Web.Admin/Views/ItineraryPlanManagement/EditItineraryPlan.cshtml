@using TraVinhMaps.Web.Admin.Models.ItineraryPlans;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
@model UpdateItineraryPlanResponse
@{
    ViewData["Title"] = "EditItineraryPlan";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>Edit Itinerary Plan</h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"
                                    style="font-size: 20px;"></i></a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Itinerary Plan Management</a></li>
                        <li class="breadcrumb-item active">Edit Itinerary Plan</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form theme-form">
                            <form asp-action="EditItineraryPlan" method="post">
                                <input readonly asp-for="Id" type="hidden" />
                                <div class="row">
                                    <div class="mb-3">
                                        <label>EditItinerary Plan Title</label>
                                        <input asp-for="Name" class="form-control" type="text"
                                            placeholder="Event or festival title">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Duration</label>
                                            <select asp-for="Duration" asp-items="ViewBag.DurationValue"
                                                class="form-select"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Estimate Cost</label>
                                            <select asp-for="EstimatedCost" asp-items="ViewBag.EstimatedCostValue"
                                                class="form-select"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-success me-3">Save changes
                                                </button>
                                            <a asp-action="Index" class="btn btn-danger">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/js/sweetalert-custom.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            @if (TempData["successMessage"] != null)
                {
                    <text>
                        showTimedAlert("Success!", @TempData["successMessage"], "success", 2000);
                    </text>
            }
                @if (TempData["errorMessage"] != null)
                {
                    <text>
                        showTimedAlert("Error!", @TempData["errorMessage"], "error", 2000);
                    </text>
            }
                    });
    </script>
}
