@model List<TraVinhMaps.Web.Admin.Models.BreadcrumbItem>

<div class="col-6">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">
                <i class="fa fa-home" style="font-size: 20px;"></i>
            </a>
        </li>
        @{
            var breadcrumbs = ViewData["Breadcrumb"] as List<BreadcrumbItem>;
        }
        @if (breadcrumbs != null && breadcrumbs.Any())
        {
            foreach (var item in breadcrumbs.Take(breadcrumbs.Count - 1))
            {
                <li class="breadcrumb-item">
                    @if (!string.IsNullOrEmpty(item.Url))
                    {
                        <a href="@item.Url">@item.Title</a>
                    }
                    else
                    {
                        @item.Title
                    }
                </li>
            }
            <li class="breadcrumb-item active">@breadcrumbs.Last().Title</li>
        }
    </ol>
</div>
