@using TraVinhMaps.Web.Admin.Models.LocalSpecialties
@model CreateSpecialtyViewModel
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Create Local Specialty";
}

<style>
    .ck-powered-by,
    .ck.ck-powered-by,
    .ck-powered-by-balloon,
    .ck-balloon-panel .ck-powered-by,
    .ck-balloon-panel.ck-powered-by-balloon {
        display: none !important;
        visibility: hidden !important;
        opacity: 0 !important;
    }

    .add-image-box {
        margin-top: 10px;
        width: 100%;
        height: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 2px dashed #aaa;
        position: relative;
        cursor: pointer;
        border-radius: 9px;
        background-color: #f8f9fa;
    }

    .upload-placeholder {
        font-size: 24px;
        color: #aaa;
    }

    .add-image-box:hover {
        background-color: #e0e0e0;
    }

    #searchAddressBtn {
        background-color: #28a745;
        color: white;
        border-color: #28a745;
    }

    #searchAddressBtn:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .input-group:focus-within #searchAddressBtn {
        z-index: 4;
        border-color: #86b7fe;
    }

    .ck-editor__editable_inline {
        min-height: 150px !important;
    }

    .location-group {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }
</style>

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>@ViewData["Title"]</h4>
                </div>
                @{
                    var breadcrumbs = ViewData["Breadcrumb"] as List<BreadcrumbItem>;
                }
                @if (breadcrumbs != null)
                {
                    @await Html.PartialAsync("_Breadcrumb", breadcrumbs)
                }
            </div>
        </div>
    </div>
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form theme-form">
                            <form asp-action="Create" method="post" enctype="multipart/form-data"
                                id="createLocalSpecialtyForm">

                                <div class="row">
                                    <div class="col-lg-7">
                                        <div id="map" class="here-map-container" data-latitude="9.9513"
                                            data-longitude="106.3346"
                                            style="width: 100%; height: 400px; background-color: #f0f0f0; border-radius: 10px; position: relative;">
                                        </div>
                                        <br />
                                        <div class="mb-3">
                                            <label>Address</label>
                                            <div style="position: relative;">
                                                <div class="input-group">
                                                    <textarea id="Address" class="form-control"
                                                        placeholder="Enter an address to search on the map"
                                                        autocomplete="off" rows="2"></textarea>
                                                    <button class="btn btn-success" type="button"
                                                        id="searchAddressBtn"><i class="fa fa-search"></i>
                                                        Search</button>
                                                </div>
                                                <div id="addressSuggestions" class="list-group"
                                                    style="position: absolute; z-index: 1056; width: 100%; max-height: 220px; overflow-y: auto;">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label>Latitude </label>
                                                    <input id="latitude" class="form-control" type="number" step="any"
                                                        placeholder="Latitude" data-language="en" readonly>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label>Longitude </label>
                                                    <input id="longitude" class="form-control" type="number" step="any"
                                                        placeholder="Longitude" data-language="en" readonly>
                                                </div>
                                            </div>
                                        </div>
                                      
                                    </div>

                                    <div class="col-lg-5">
                                        <div class="mb-3">
                                            <label>Food Name</label>
                                            <input asp-for="FoodName" class="form-control" type="text"
                                                placeholder="Enter food name (e.g., Bánh Tét Trà Vinh)" />
                                            <span asp-validation-for="FoodName" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3" style="display: none;">
                                            <label>Tag</label>
                                            <input type="text" class="form-control"
                                                value="@(ViewBag.LocalSpecialTag?.Name ?? "Local Specialty")"
                                                readonly />
                                        </div>
                                        <div class="mb-3">
                                            <label>Description</label>
                                            <textarea asp-for="Description" id="Description"
                                                class="form-control wysiwyg-editor"
                                                placeholder="Description of the local specialty"
                                                rows="5"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <hr>

                                <!-- Images Upload -->
                                <div class="row">
                                    <div class="col">
                                        <label>Upload Local Specialty Images</label>
                                        <div class="item add-image-box" id="addImageBox">
                                            <div class="upload-placeholder">+</div>
                                            <p style="color: #666; margin: 0;">Click to upload (Max 5)</p>
                                            <input asp-for="Images" type="file" accept=".png,.jpg,.jpeg" multiple
                                                id="uploadImageInput" style="display: none;" />
                                        </div>
                                        <div id="imagePreview" class="row mt-3 g-3"></div>
                                        <span id="imageValidationMessage" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col">
                                        <div class="text-end">
                                            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                                            <button type="submit" class="btn btn-success me-3">Create Local
                                                Specialty</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends -->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/sweetalert-custom.js"></script>
    <script src="~/assets/js/local-specialties/create.js"></script>
    <script src="~/assets/js/ckeditor5.js"></script>

    <!-- HERE Maps API references -->
    <link rel="stylesheet" type="text/css" href="https://js.api.here.com/v3/3.1/mapsjs-ui.css" />
    <script type="text/javascript" src="https://js.api.here.com/v3/3.1/mapsjs-core.js"></script>
    <script type="text/javascript" src="https://js.api.here.com/v3/3.1/mapsjs-service.js"></script>
    <script type="text/javascript" src="https://js.api.here.com/v3/3.1/mapsjs-ui.js"></script>
    <script type="text/javascript" src="https://js.api.here.com/v3/3.1/mapsjs-mapevents.js"></script>

    <script>
        // Pass API Key from configuration to the browser
        window.HERE_API_KEY = '@Configuration["HEREMAP_API_KEY"]';
    </script>

    <!-- Reusing the map logic from EventAndFestival -->
    <script src="~/assets/js/EventAndFestival/heremap-edit-event.js"></script>

    <script>
        window.locationIndex = @(Model?.Locations?.Count ?? 0);

        document.addEventListener("DOMContentLoaded", function () {
            // --- TempData Alerts ---
            @if (TempData["CreateLocalSpecialtiesError"] != null)
            {
                <text>
                    showTimedAlert("Error!", "@TempData["CreateLocalSpecialtiesError"]", "error", 1000);
                </text>
            }
            else if (TempData["CreateLocalSpecialtiesSuccess"] != null)
            {
                <text>
                    showTimedAlert("Success!", "@TempData["CreateLocalSpecialtiesSuccess"]", "success", 1000);
                </text>
            }
        });
    </script>
}
