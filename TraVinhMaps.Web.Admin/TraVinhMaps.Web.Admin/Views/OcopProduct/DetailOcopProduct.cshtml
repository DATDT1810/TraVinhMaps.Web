                                {
                                    @foreach (var item in Model.ProductImage)
                                    {
                                        <div class="item" style="height: 400px;">
                                            <img src="@item" alt="image ocop product" style="width: 100%; height: 400px;" />
                                        </div>
                                    }
                                }
                                else
