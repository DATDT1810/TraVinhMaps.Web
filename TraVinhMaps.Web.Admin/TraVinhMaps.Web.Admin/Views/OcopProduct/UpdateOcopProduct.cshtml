@using TraVinhMaps.Web.Admin.Models.OcopProduct
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
@model UpdateOcopProductRequest;
@{
    ViewData["Title"] = "Update Ocop Product";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>@ViewData["Title"]</h4>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div id="alert-message" class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                </div>
                @{
                    var breadcrumbs = ViewData["Breadcrumb"] as List<BreadcrumbItem>;
                }
                @if (breadcrumbs != null)
                {
                    @await Html.PartialAsync("_Breadcrumb", breadcrumbs)
                }
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form theme-form">
                            <form id="updateOcopProductForm" asp-action="UpdateOcopProductPost" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label>Product Name</label>
                                            <input asp-for="ProductName" class="form-control" type="text"
                                                placeholder="Name of product">
                                            <span asp-validation-for="ProductName" class="text-danger"></span>
                                        </div>
                                        <input readonly hidden asp-for="Id" class="form-control" type="text"
                                                placeholder="Project name *">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3 text-justify">
                                            <label>Product Description</label>
                                            <textarea asp-for="ProductDescription" id="Description" class="form-control"
                                                placeholder="Description of product"
                                                 rows="15"></textarea>
                                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label>Giá tham khảo</label>
                                            <div class="input-group">
                                                <input asp-for="ProductPrice" class="form-control" type="text"
                                                    placeholder="Price of product">
                                                <span class="input-group-text">VNĐ</span>
                                            </div>
                                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label>Loại Ocop</label>
                                            <select asp-for="OcopTypeId" class="form-select">
                                                <option value="">-- Select Ocop Type --</option>
                                                @foreach (var type in (IEnumerable<TraVinhMaps.Web.Admin.Models.OcopType.OcopTypeResponse>)ViewBag.OcopTypes)
                                                {
                                                    <option value="@type.Id" selected="@(Model.OcopTypeId == type.Id ? "selected" : null)">
                                                        @type.OcopTypeName
                                                    </option>
                                                }
                                            </select>
                                            <span asp-validation-for="OcopTypeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label>Công ty</label>
                                            <select asp-for="CompanyId" class="form-select">
                                                <option value="">-- Select Ocop Type --</option>
                                                @foreach (var company in (IEnumerable<TraVinhMaps.Web.Admin.Models.Company.CompanyResponse>)ViewBag.Companies )
                                                {
                                                    <option value="@company.Id" selected="@(Model.CompanyId == company.Id ? "selected" : null)">
                                                        @company.Name
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label>Điểm Ocop</label>
                                            <select asp-for="OcopPoint" class="form-select">
                                                <option value="1">1 sao</option>
                                                <option value="2">2 sao</option>
                                                <option value="3">3 sao</option>
                                                <option value="4">4 sao</option>
                                                <option value="5">5 sao</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label>Năm công nhận Ocop</label>
                                            <select asp-for="OcopYearRelease" class="form-control" data-language="en">
                                                @for(int year = DateTime.Now.Year; year >= 2018; year--){
                                                    <option value="@year">@year</option>
                                                }
                                            </select>
                                            <span asp-validation-for="OcopYearRelease" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3" style="display: none;">
                                        <div class="mb-3">
                                            <label>Ocop Product Tag</label>
                                            <select asp-for="TagId" class="form-select">
                                                @foreach (var tag in (IEnumerable<TraVinhMaps.Web.Admin.Models.Tags.TagsResponse>)ViewBag.Tags)
                                                {
                                                    if(@tag.Name == "Ocop"){
                                                        <option value="@tag.Id" selected="@(Model.TagId == tag.Id ? "selected" : null)">
                                                            @tag.Name
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="text-end">
                                            <button type="button" id="submitBtn" class="btn btn-success me-3">Update Product</button>
                                            <a asp-action="DetailOcopProduct" asp-route-id = "@Model.Id"
                                                class="btn btn-danger">Cancel</a>
                                            <button type="submit" class="btn btn-success me-3">Save Changes</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
    <style>
        .ck-editor__editable {
            min-height: 250px; /* Corresponds roughly to rows="15" */
        }
        .ck-editor__editable_inline {
            padding: 5px 10px !important;
        }
    </style>
    @Html.AntiForgeryToken()
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
    <script src="~/assets/js/sweetalert-custom.js"></script>
    <script src="~/assets/js/ocopproduct/crud.js"></script>
    <script src="~/assets/js/ocopproduct/formModal.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/34.2.0/classic/ckeditor.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const editorConfig = {
            toolbar: {
                items: [
                    'heading',
                    '|',
                    'bold',
                    'italic',
                    'bulletedList',
                    'numberedList',
                    '|',
                    'outdent',
                    'indent',
                    '|',
                    'blockQuote',
                    'undo',
                    'redo'
                ]
            },
            language: 'en'
        };

        let editor;
        ClassicEditor
            .create(document.querySelector('#Description'), editorConfig)
            .then(newEditor => {
                editor = newEditor;
            })
            .catch(error => {
                console.error(error);
            });

        document.getElementById('submitBtn').addEventListener('click', function () {
            const form = document.getElementById('updateOcopProductForm');
            const descriptionTextarea = document.querySelector('#Description');

            // Update textarea with CKEditor data before validation/submission
            if (editor) {
                descriptionTextarea.value = editor.getData();
            }

            let isValid = true;
            let errorMessages = [];

            const productName = document.getElementById('ProductName').value;
            if (!productName || productName.trim() === '') {
                isValid = false;
                errorMessages.push('Product Name is required.');
            }

            const productPriceInput = document.getElementById('ProductPrice');
            const productPrice = parseFloat(productPriceInput.value);
            if (isNaN(productPrice)) {
                isValid = false;
                errorMessages.push('Price must be a valid number.');
            } else if (productPrice < 0) {
                isValid = false;
                errorMessages.push('Price cannot be negative.');
            }

            const ocopTypeId = document.getElementById('OcopTypeId').value;
            if (!ocopTypeId || ocopTypeId === '') {
                isValid = false;
                errorMessages.push('Ocop Type is required.');
            }

            const companyId = document.getElementById('CompanyId').value;
            if (!companyId || companyId === '') {
                isValid = false;
                errorMessages.push('Company is required.');
            }

            const ocopPoint = document.getElementById('OcopPoint').value;
            if (!ocopPoint || ocopPoint === '') {
                isValid = false;
                errorMessages.push('Ocop Point is required.');
            }

            const ocopYearRelease = document.getElementById('OcopYearRelease').value;
            if (!ocopYearRelease || ocopYearRelease === '') {
                isValid = false;
                errorMessages.push('Ocop Year Release is required.');
            }

            if (isValid) {
                form.submit();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    html: errorMessages.join('<br>')
                });
            }
        });

        setTimeout(function () {
            var alert = document.getElementById("alert-message");
            if (alert) {
                alert.style.display = "none";
            }
        }, 1000);
    });
    </script>
}
