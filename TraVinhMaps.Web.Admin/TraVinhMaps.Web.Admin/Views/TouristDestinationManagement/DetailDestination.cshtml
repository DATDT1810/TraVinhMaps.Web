                                <div class="time-card open">
                                  
                                    <div class="time">@DateTime.Parse(Model.OpeningHours?.OpenTime ?? "0:00").ToString("h:mm")</div>
                                    <div class="ampm">@DateTime.Parse(Model.OpeningHours?.OpenTime ?? "0:00").ToString("tt")</div>
                                    <i class="fa fa-sun-o"></i>
                                </div>
                                <div class="time-card close">
                                   
