        if (addBox && uploadInput) {
            addBox.addEventListener("click", function () {
                uploadInput.click();
            });
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        const addressContent = document.getElementById("addressContent");
        const expandBtn = document.getElementById("expandBtn");

        // Use a small timeout to ensure the browser has rendered and calculated the element's height
        setTimeout(function() {
            if (addressContent.scrollHeight > addressContent.clientHeight) {
                expandBtn.style.display = "block";
            }
        }, 100);

        expandBtn.addEventListener("click", function (e) {
            e.preventDefault();
            addressContent.classList.toggle("expanded");
            if (addressContent.classList.contains("expanded")) {
                expandBtn.textContent = "thu gọn";
            } else {
                expandBtn.textContent = "mở rộng";
            }
        });
    });
