@functions {
    public static (bool, double) GetOperatingStatus(string openTimeStr, string closeTimeStr)
    {
        if (string.IsNullOrEmpty(openTimeStr) || string.IsNullOrEmpty(closeTimeStr))
        {
            return (false, 0);
        }

        try
        {
            var now = DateTime.Now.TimeOfDay;
            var openTime = DateTime.Parse(openTimeStr).TimeOfDay;
            var closeTime = DateTime.Parse(closeTimeStr).TimeOfDay;
            
            if (closeTime < openTime) // Handles overnight opening
            {
                closeTime = closeTime.Add(TimeSpan.FromDays(1));
            }

            bool isOpen = (now >= openTime && now < closeTime);
            var totalDurationHours = (closeTime - openTime).TotalHours;

            return (isOpen, totalDurationHours);
        }
        catch (Exception)
        {
            return (false, 0);
        }
    }
}


