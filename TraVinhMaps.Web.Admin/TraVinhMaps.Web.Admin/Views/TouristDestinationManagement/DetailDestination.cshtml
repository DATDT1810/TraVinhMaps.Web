                                    <a class="btn btn-back" asp-action="Index">Back</a>
                                    <a class="btn btn-edit" asp-action="EditDestination" asp-route-id="@Model.Id"><i
                                            class="fa fa-pencil" aria-hidden="true"></i>Edit Destination</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-3 col-md-6 box-col-12">
                    <div class="card operating-time-card">
                        <div class="card-body">
                            <div class="info-header">
                                <div>
                                    <i class="fa fa-clock-o" style="margin-right:0"></i>
                                    <span>Operating time</span>
                                </div>
                                <div class="current-time">
                                    <span>Now</span>
