                                <div class="contact-details">
                                    <div class="label">Email</div>
                                    <div class="value">@(Model.Contact?.Email ?? "")</div>
                                </div>
                            </div>
                            <div class="contact-item">
                                <div class="contact-icon website"><i class="fa fa-link"></i></div>
                                <div class="contact-details">
                                    <div class="label">Website</div>
                                    <div class="value"><a href="@Model.Contact?.Website" target="_blank">@Model.Contact?.Website</a></div>
                                </div>
