@using TraVinhMaps.Web.Admin.Models.Admins
@model AdminRequest
@{
    // ViewData["Title"] = "Create";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>@ViewData["Title"]</h4>
                </div>
                @{
                    var breadcrumbs = ViewData["Breadcrumb"] as List<BreadcrumbItem>;
                }
                @if (breadcrumbs != null)
                {
                    @await Html.PartialAsync("_Breadcrumb", breadcrumbs)
                }
            </div>
        </div>
    </div>
    <!-- Previous HTML remains the same -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form theme-form">
                            <form id="createAdminForm" asp-controller="Admin" asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <input asp-for="Email" class="form-control" type="email"
                                                placeholder="Enter email *" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="mb-3">
                                            <input asp-for="RoleId" type="hidden" value="dummy" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="text-end">
                                            <a asp-controller="Admin" asp-action="Index"
                                                class="btn btn-cancel">Cancel</a>
                                            <button type="submit" id="create_btn"
                                                class="btn btn-success me-3">Create</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/sweetalert-custom.js"></script>
    <script src="~/assets/js/admins/create.js"></script>
    <script>
        const createAdminForm = document.getElementById('createAdminForm');
        if (createAdminForm) {
            createAdminForm.addEventListener('submit', function (e) {
                // Nếu form không hợp lệ => dừng lại, không disable nút
                if (!createAdminForm.checkValidity()) {
                    e.preventDefault(); // Ngăn submit
                    e.stopPropagation();
                    return;
                }

                const create_btn = document.getElementById('create_btn');
                if (create_btn) {
                    create_btn.disabled = true;
                    create_btn.innerHTML =
                        '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Creating...';
                }
            });
        }
    </script>
}